@page "/account/login"

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model DigitalGoods.Web.BlazorServer.Pages.Account.LoginModel
@{
    Layout = "_AccountLayout";
}

<h2 class="mb-4 text-center">Sign In</h2>

<div class="form-container">
    <form method="post">
        <div>
            <label asp-for="LoginCredential.UserName" class="form-label"></label>
            <input type="text" asp-for="LoginCredential.UserName" class="form-control" placeholder="Enter username" />
            <span class="text-danger" asp-validation-for="LoginCredential.UserName"></span>
        </div>
        <div>
            <label asp-for="LoginCredential.Password" class="form-label"></label>
            <input type="password" asp-for="LoginCredential.Password" class="form-control" 
                placeholder="Enter password" />
            <span class="text-danger" asp-validation-for="LoginCredential.Password"></span>
        </div>
        <div class="form-check">
            <label class="form-check-label">
                <input type="checkbox" asp-for="LoginCredential.RememberMe" class="form-check-input" />
                <label class="form-check-label" asp-for="LoginCredential.RememberMe"></label>
            </label>
        </div>
        <div class="d-flex justify-content-center mb-0">
            <input type="submit" class="btn btn-primary" value="Login" />
        </div>
    </form>
</div>