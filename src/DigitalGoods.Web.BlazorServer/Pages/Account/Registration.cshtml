@page "/account/register"

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using DigitalGoods.Web.BlazorServer.Shared
@model DigitalGoods.Web.BlazorServer.Pages.Account.RegistrationModel
@{
    Layout = "_AccountLayout";
}

<h2 class="mb-4 text-center">Sign Up</h2>

<div class="form-container">
    <form method="post">
        <div>
            <label asp-for="SignUpCredential.Email" class="form-label"></label>
            <input type="text" asp-for="SignUpCredential.Email" class="form-control" placeholder="Enter email" />
            <span class="text-danger" asp-validation-for="SignUpCredential.Email"></span>
        </div>
        <div>
            <label asp-for="SignUpCredential.UserName" class="form-label"></label>
            <input type="text" asp-for="SignUpCredential.UserName" class="form-control" placeholder="Enter username" />
            <span class="text-danger" asp-validation-for="SignUpCredential.UserName"></span>
        </div>
        <div>
            <label asp-for="SignUpCredential.Password" class="form-label"></label>
            <input type="password" asp-for="SignUpCredential.Password" class="form-control" placeholder="Enter password" />
            <span class="text-danger" asp-validation-for="SignUpCredential.Password"></span>
        </div>
        <div>
            <label asp-for="SignUpCredential.PasswordConfirmation" class="form-label"></label>
            <input type="password" asp-for="SignUpCredential.PasswordConfirmation" class="form-control" placeholder="Confirm password" />
            <span class="text-danger" asp-validation-for="SignUpCredential.PasswordConfirmation"></span>
        </div>
        <div class="d-flex justify-content-center mb-0">
            <input type="submit" class="btn btn-primary" value="Register" />
        </div>
    </form>
</div>
